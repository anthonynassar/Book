<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeopleApp.Views.ProfileLoadingPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="Loading profile... Please wait..." FontSize="Medium"
                AbsoluteLayout.LayoutBounds="0.5,0.3,AutoSize,AutoSize" AbsoluteLayout.LayoutFlags="PositionProportional" />
            <ActivityIndicator IsRunning="True" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5,100,100"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>